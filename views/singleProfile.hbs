<h4>Name:</h4>
<p>{{user.displayName}}</p>

<h4>Email:</h4>
<p>{{user.email}}</p>
<h4>Profile picture</h4>
<img src="{{user.imgUrl}}"">

<h4>Biography:</h4>
<p>{{user.bio}}</p>

<h4>Tweets:</h4>
<p>{{user.tweets}}</p>

<h4>Following:</h4>
{{#each followings}}
  <div>{{this.follower.displayName}}
</div>
{{/each}}

<h4>Followers:</h4>
{{#each followers}}
  <p>{{this.following.displayName}}</p>
{{/each}}

<form action="/users/{{user._id}}/follow" method="post">
  <button type="submit">Follow</button>
</form>
